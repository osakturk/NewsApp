<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omerakturk.gazetewithmenu.fragment.VideoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/_btn_video1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ensonhaber"

                />
            <ImageView
                android:id="@+id/_btn_video2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/_btn_video1"
                android:src="@drawable/ntv"
                android:layout_marginTop="20dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/_btn_video3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/_btn_video2"
                android:src="@drawable/aa"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/_btn_video4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video3"
                android:clickable="true"
                android:src="@drawable/akit"
                android:layout_marginTop="20dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/_btn_video5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"

                android:src="@drawable/hurriyet"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_video6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"
                android:src="@drawable/cumhuriyet"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/_btn_video7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"
                android:src="@drawable/aksam"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_video8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"
                android:src="@drawable/cnnturk"
                android:layout_marginTop="20dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/_btn_video9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"
                android:src="@drawable/karar"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_video10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_video4"
                android:clickable="true"
                android:src="@drawable/posta"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_video11"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:clickable="true"
                android:src="@drawable/haberturk"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/_btn_video12"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:clickable="true"
                android:src="@drawable/yenisafak"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
