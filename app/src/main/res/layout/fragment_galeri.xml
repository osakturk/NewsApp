<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omerakturk.gazetewithmenu.fragment.GaleriFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/_btn_galeri1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ensonhaber"

                />
            <ImageView
                android:id="@+id/_btn_galeri2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/_btn_galeri1"
                android:src="@drawable/ntv"
                android:layout_marginTop="20dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/_btn_galeri3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/_btn_galeri2"
                android:src="@drawable/aa"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/_btn_galeri4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/_btn_galeri3"
                android:clickable="true"

                android:src="@drawable/hurriyet"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/_btn_galeri5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/cumhuriyet"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/_btn_galeri6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/aksam"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_galeri7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/cnnturk"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_galeri8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/karar"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/_btn_galeri9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/posta"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_galeri10"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:clickable="true"
                android:src="@drawable/haberturk"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/_btn_galeri11"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:clickable="true"
                android:src="@drawable/yenisafak"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_galeri12"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:clickable="true"
                android:src="@drawable/sozcu"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
