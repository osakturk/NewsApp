<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omerakturk.gazetewithmenu.fragment.MagazinFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/_btn_magazin1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/kelebeki"

                />
            <ImageView
                android:id="@+id/_btn_magazin2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/gecce"
                android:layout_marginTop="20dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/_btn_magazin3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ucankuslogo"
                android:clickable="true"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/_btn_magazin4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/milliyet"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/_btn_magazin5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"

                android:src="@drawable/karnaval"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/_btn_magazin6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:src="@drawable/htkulup_logo"
                android:layout_marginTop="10dp"/>
            </LinearLayout>
    </LinearLayout>


</RelativeLayout>
